<!-- Pagination.razor -->
@if (TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li class="page-item" @onclick="(() => ChangePage(1))" disabled="@IsFirstPage">
                <a class="page-link" href="#" aria-label="First">
                    <span aria-hidden="true">&laquo;&laquo;</span>
                </a>
            </li>
            <li class="page-item" @onclick="(() => ChangePage(CurrentPage - 1))" disabled="@IsFirstPage">
                <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            @for (int i = 1; i <= TotalPages; i++)
            {
                <li class="page-item @(i == CurrentPage ? "active" : "")" @onclick="(() => ChangePage(i))">
                    <a class="page-link" href="#">@i</a>
                </li>
            }
            <li class="page-item" @onclick="(() => ChangePage(CurrentPage + 1))" disabled="@IsLastPage">
                <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
            <li class="page-item" @onclick="(() => ChangePage(TotalPages))" disabled="@IsLastPage">
                <a class="page-link" href="#" aria-label="Last">
                    <span aria-hidden="true">&raquo;&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
}

