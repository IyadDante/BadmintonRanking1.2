@page "/TestingPage"
@using BadmintonPlayerRankingLibrary.Data
@using BadmintonPlayerRankingLibrary.Models

@inject Microsoft.AspNetCore.Components.NavigationManager NavPara


<h3>Create New Player</h3>

<!-- Table Section -->
@if (playersList != null && playersList.Any())
{
    <p>ShowForm: @showForm , @selectedPlayer.Id</p>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Club</th>
                <th>Gender</th>
                <th>Age Group</th>
                <th>Year Of Birth</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var player in playersList)
            {
                <!-- Double click event to trigger the edit action -->
                <tr @ondblclick="() => ShowEditModal(player)">
                    <td>@player.Id</td>
                    <td>@player.FirstName</td>
                    <td>@player.LastName</td>
                    <td>@player.Club</td>
                    <td>@player.Gender</td>
                    <td>@player.AgeGroup</td>
                    <td>@player.YearOfBirth</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Modal -->
    <div class="modal" tabindex="-1" id="playerModal" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Update Player</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <!-- Display input fields based on PlayerModel properties with Data Annotations -->
                        <div class="mb-3">
                            <label for="firstName" class="form-label">First Name</label>
                            <input type="text" class="form-control" id="firstName" @bind="selectedPlayer.FirstName" />
                        </div>
                        <div class="mb-3">
                            <label for="lastName" class="form-label">Last Name</label>
                            <input type="text" class="form-control" id="lastName" @bind="selectedPlayer.LastName" />
                        </div>
                        <!-- Add other input fields based on PlayerModel properties -->

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-primary" @onclick="UpdatePlayer">Update changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}


