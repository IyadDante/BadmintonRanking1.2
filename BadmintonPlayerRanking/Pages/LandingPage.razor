@page "/LandingPage"
@inject Microsoft.AspNetCore.Components.NavigationManager NavPara

@using BadmintonPlayerRankingLibrary.Data

@inject ISqlData _db

<h3>LandingPage</h3>

@if (ClubsList != null && ClubsList.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Club Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var club in ClubsList)
            {
                <tr>
                    <td>@club.id</td>
                    <td>@club.clubName</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No clubs available.</p>
}
